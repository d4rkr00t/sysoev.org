---
layout: layout
---
<%- partial('header/header_post') %>
<div class="page-row-expanded">
    <div class="main-cont">
        <article class="post">

            <%- content %>

            <section class="section -narrow -bottom">
            <div class="share">
                <a href="https://twitter.com/intent/tweet?text=<%= document.title %>&url=<%= site.url %><%= document.url %>"
                   class="share__item"
                   target="_blank"><i class="icon icon-social-twitter-outline"></i> twitter
                </a>
            </div>

            <div id="disqus_thread"></div>
                <script type="text/javascript">
                  /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                  var disqus_shortname = 'ssysoev'; // required: replace example with your forum shortname

                  /* * * DON'T EDIT BELOW THIS LINE * * */
                  (function() {
                      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                  })();
                </script>
            </section>
        </article>
    </div>
</div>

<%- partial('photoswipe') %>


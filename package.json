{
  "name": "sysoev.org",
  "version": "3.0.0",
  "description": "Personal site sysoev.org",
  "author": "Stanislav Sysoev @d4rkr00t",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "aik src/index.js",
    "build": "aik src/index.js --build docs",
    "postbuild": "npm run copy:manifest && npm run copy:ico && npm run copy:cname && npm run service-worker",
    "copy:manifest": "cp ./manifest.json ./docs/",
    "copy:ico": "cp ./favicon.ico ./docs/",
    "copy:cname": "cp ./CNAME ./docs/",
    "service-worker": "node ./service-worker/service-worker-generator.js"
  },
  "devDependencies": {
    "aik": "d4rkr00t/aik",
    "glob": "^7.1.1",
    "uglify-js": "^2.7.4"
  },
  "eslintConfig": {
    "extends": "./node_modules/aik/lib/eslint-config.js"
  }
}

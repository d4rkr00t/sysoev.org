{
    "styles_type": "scss",
    "scripts_type": "js",
    "html_type": "html",
    "tpls": "/bethonjs/tpls",
    "entities": {
        "page": {
            "html": {
                "tpl": "page.{{html_type}}",
                "file": "{{name}}.{{html_type}}"
            }
        },
        "block": {
            "prefix": "b-",
            "block_dir": {
                "tpl": "dir",
                "file": "blocks/{{name}}",
                "required": true
            },
            "css": {
                "tpl": "block.{{styles_type}}",
                "file": "blocks/{{name}}/{{name}}.{{styles_type}}"
            },
            "js": {
                "tpl": "block.{{scripts_type}}",
                "file": "blocks/{{name}}/{{name}}.{{scripts_type}}"
            },
            "img": {
                "tpl": "dir",
                "file": "blocks/{{name}}/img"
            }
        },
        "element": {
            "prefix": "e-",
            "css": {
                "tpl": "element.{{styles_type}}",
                "file": "blocks/{{parent}}/{{name}}.{{styles_type}}"
            }
        },
        "mod": {
            "prefix": "m-",
            "css": {
                "tpl": "mod.{{styles_type}}",
                "file": "blocks/{{parent}}/{{name}}.{{styles_type}}"
            }
        }
    }
}